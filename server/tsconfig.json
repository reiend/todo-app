{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",

    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./build",

    "allowJs": false,
    "checkJs": false,

    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
